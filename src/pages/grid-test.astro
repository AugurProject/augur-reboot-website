---
import Layout from '../layouts/Layout.astro';
import PerspectiveGridTunnel from '../components/PerspectiveGridTunnel.jsx';
import AugurLogo from '../assets/augur.svg?raw';
---

<Layout title="Grid Test">
  <div style="
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    color: #00ff00;
    font-family: 'Barlow', sans-serif;
    z-index: 1;
    text-align: center;
  ">
    <div style="position: absolute; top: 20px; right: 20px; display: flex; gap: 10px;">
      <a href="#" style="color: #00ff00; text-decoration: none; font-family: 'Press Start 2P', cursive; font-size: 1.2em;">D</a>
      <a href="#" style="color: #00ff00; text-decoration: none; font-family: 'Press Start 2P', cursive; font-size: 1.2em;">T</a>
    </div>

    <div style="width: 100px; height: 100px;" set:html={AugurLogo} />
    <h1 style="font-family: 'Barlow', sans-serif; font-size: 3em; margin: 0;">augur</h1>
    
    <h2 style="font-family: 'Press Start 2P', cursive; font-size: 2.5em; margin: 20px 0; display: flex; align-items: center; gap: 20px;">
      <span style="width: 50px; height: 2px; background-color: #00ff00;"></span>
      IS REBOOTING
      <span style="width: 50px; height: 2px; background-color: #00ff00;"></span>
    </h2>

    <p style="font-family: 'Barlow', sans-serif; font-size: 1.2em; margin-top: 0; letter-spacing: 0.2em;">
      THE FRONTIER OF PREDICTION MARKET
    </p>

    <div style="margin-top: 50px; text-align: left; width: 60%; max-width: 800px;">
      <p style="font-family: 'Press Start 2P', cursive; font-size: 1em; margin: 10px 0;">
        > REIMAGINED, TRANSFORMED, REFRESHED
      </p>
      <p style="font-family: 'Press Start 2P', cursive; font-size: 1em; margin: 10px 0;">
        THE VISIONARIES BEHIND AUGUR
      </p>
      <p style="font-family: 'Press Start 2P', cursive; font-size: 1em; margin: 10px 0;">
        IS MY REP SAFE?
      </p>
    </div>
  </div>
  <PerspectiveGridTunnel client:load animationStarted={true} numLines={12} animationSpeed={0.1} maxOpacity={0.1} />
</Layout>

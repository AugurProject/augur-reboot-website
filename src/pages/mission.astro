---
import Layout from "../layouts/Layout.astro";
import PerspectiveGridTunnel from "../components/PerspectiveGridTunnel.tsx";
import SocialLinks from "../components/SocialLinks.astro";
import AugurLogo from "../assets/augur.svg"
---

<Layout title="Mission - Augur">
  <PerspectiveGridTunnel client:load animationStarted={true} numLines={12} animationSpeed={0.1} maxOpacity={0.1} lineColor="#2AE7A8" />
  <div class="max-w-screen-xl mx-auto px-4 md:px-8">
    <SocialLinks />
    <!-- MAIN CONTENT -->
    <main class="py-16">
      <h1
        class="flex justify-center items-center gap-3 text-white text-2xl tracking-[4px] uppercase mb-24"
      >
        <span class="title-icon"></span>
        Updates in Progress
      </h1>

      <div class="max-w-4xl mx-auto">
        <!-- Group 1: Protocol Architecture -->
        <div
          class="grid grid-cols-1 lg:grid-cols-[1fr_2fr] gap-8 mb-16 items-start"
        >
          <h2 class="text-white text-xl font-bold lg:text-right lg:pr-8">
            Protocol Architecture Overhaul
          </h2>
          <div class="detail-marker">
            <div class="mb-8">
              <h3 class="text-[#00FF9B] font-bold mb-2">
                MODULAR CORE CONTRACTS
              </h3>
              <p class="text-sm leading-relaxed">
                SPLITS MONOLITHIC AUGUR CONTRACT INTO MARKET, SETTLEMENT, &
                TREASURY MODULES ENABLES PERMISSIONLESS UPGRADES OF INDIVIDUAL
                MODULES VIA GOVERNANCE
              </p>
            </div>
            <div>
              <h3 class="text-[#00FF9B] font-bold mb-2">
                LAYER-2 NATIVE SETTLEMENT
              </h3>
              <p class="text-sm leading-relaxed">
                PRIMARY TRADE MATCHING AND SETTLEMENT MIGRATED TO OPTIMISTIC
                ROLLUP (E.G. BASE) FINALITY PROOFS BATCHED TO ETHEREUM L1 EVERY
                4 HOURS
              </p>
            </div>
          </div>
        </div>

        <!-- Group 2: Oracle System -->
        <div
          class="grid grid-cols-1 lg:grid-cols-[1fr_2fr] gap-8 mb-16 items-start"
        >
          <h2 class="text-white text-xl font-bold lg:text-right lg:pr-8">
            Oracle System 2.0
          </h2>
          <div class="detail-marker">
            <div class="mb-8">
              <h3 class="text-[#00FF9B] font-bold mb-2">
                HYBRID ORACLE COUNCIL
              </h3>
              <p class="text-sm leading-relaxed">
                COMBINES EXISTING REP-STAKING DISPUTE MECHANISM WITH ELECTED
                "DATA DELEGATES" DELEGATES SLASHED FOR MIS-REPORTS, VOTERS
                REWARDED FOR TIMELY CHALLENGES
              </p>
            </div>
            <div>
              <h3 class="text-[#00FF9B] font-bold mb-2">
                PROOF-OF-REALITY FEEDS
              </h3>
              <p class="text-sm leading-relaxed">
                INTRODUCES STANDARDIZED ON-CHAIN DATA ATTESTATIONS SIGNED BY
                REPUTABLE PUBLISHERS (APIS & NEWS DESKS) MARKETS CAN OPT-IN TO
                AUTOMATIC FINALIZATION IF QUORUM OF FEEDS AGREE
              </p>
            </div>
          </div>
        </div>

        <!-- Group 3: Governance -->
        <div
          class="grid grid-cols-1 lg:grid-cols-[1fr_2fr] gap-8 mb-16 items-start"
        >
          <h2 class="text-white text-xl font-bold lg:text-right lg:pr-8">
            Governance & REP-V4 Tokenomics
          </h2>
          <div class="detail-marker">
            <div class="mb-8">
              <h3 class="text-[#00FF9B] font-bold mb-2">
                SUPPLY CONSOLIDATION
              </h3>
              <p class="text-sm leading-relaxed">
                3:1 MERGE OF REPV2 AND REPV3 INTO NEW ERC-20 "REPX" SNAPSHOT
                AIRDROP AT BLOCK X TO UNIFY LIQUIDITY POOLS
              </p>
            </div>
            <div class="mb-8">
              <h3 class="text-[#00FF9B] font-bold mb-2">
                QUADRATIC VOTING FOR PROPOSALS
              </h3>
              <p class="text-sm leading-relaxed">
                LIMITS WHALE DOMINANCE; STAKED REPX VOTES WEIGHTED BY
                SQUARE-ROOT FUNCTION
              </p>
            </div>
            <div>
              <h3 class="text-[#00FF9B] font-bold mb-2">
                DYNAMIC INFLATION SCHEDULE
              </h3>
              <p class="text-sm leading-relaxed">
                1% BASE INFLATION ROUTED TO: 60% MARKET CREATION REWARD 30%
                ORACLE COUNCIL BUDGET 10% DEV DAO GRANTS
              </p>
            </div>
          </div>
        </div>

        <!-- Group 4: Liquidity -->
        <div class="grid grid-cols-1 lg:grid-cols-[1fr_2fr] gap-8 items-start">
          <h2 class="text-white text-xl font-bold lg:text-right lg:pr-8">
            Liquidity & Market Incentives
          </h2>
          <div class="detail-marker">
            <div class="mb-8">
              <h3 class="text-[#00FF9B] font-bold mb-2">
                AMM-BACKED ORDER BOOKS
              </h3>
              <p class="text-sm leading-relaxed">
                UNFILLED ORDERS ROUTED TO AN INTERNAL CPMM POOL TO TIGHTEN
                SPREADS
              </p>
            </div>
            <div class="mb-8">
              <h3 class="text-[#00FF9B] font-bold mb-2">
                LIQUIDITY MINING 2.0
              </h3>
              <p class="text-sm leading-relaxed">
                EPOCH-BASED REWARDS THAT AUTO-COMPOUND INTO LP SHARES
              </p>
            </div>
            <div>
              <h3 class="text-[#00FF9B] font-bold mb-2">
                "INSTANT RESOLVE" PREDICTION SWAPS
              </h3>
              <p class="text-sm leading-relaxed">
                CREATES OUTCOME-AGNOSTIC SYNTHETIC POSITIONS FOR RAPID HEDGING
              </p>
            </div>
          </div>
        </div>
      </div>
    </main>
  </div>

  <!-- FOOTER -->
  <footer class="max-w-screen-xl mx-auto px-4 md:px-8 py-16">
    <div class="border border-[#00FF9B] p-8 md:p-12 mb-8">
      <div
        class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-[2fr_1fr_1.5fr_1.5fr] gap-12"
      >
        <!-- Column 1: Logo & Tagline -->
        <div class="md:col-span-2 lg:col-span-1">
          <a href="#" class="text-7xl">

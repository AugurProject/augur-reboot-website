---
import { getCollection } from 'astro:content';
import type { ImageMetadata } from 'astro';
import { Image } from 'astro:assets';
import { withBase } from '../lib/utils';
import { Test } from '../components/Test';

// Import featured images from all blog posts
const images = import.meta.glob('/src/content/blog/*/featured-image.webp', { eager: true });

// Create a map from slug to image object
const imageMap = Object.entries(images).reduce((acc, [path, module]) => {
  // Extract blog post slug from path: /src/content/blog/{slug}/featured-image.webp
  const slug = path.split('/').at(-2);
  if (!slug) {
    console.warn(`Invalid image path structure: ${path}`);
    return acc;
  }
  acc[slug] = module.default;
  return acc;
}, {} as Record<string, ImageMetadata>);

// Get all blog posts
const allPosts = await getCollection('blog');

// Sort by publish date (newest first) and take first 3 for homepage preview
const blogPosts = allPosts
  .sort((a, b) => b.data.publishDate.valueOf() - a.data.publishDate.valueOf())
  .slice(0, 3);

// Extract featured and secondary posts
const featuredPost = blogPosts[0];
const secondaryPosts = blogPosts.slice(1, 3);

// Get featured image, with validation
const featuredImage = featuredPost ? imageMap[featuredPost.slug] : undefined;
if (!featuredImage && featuredPost) {
  console.warn(`Missing featured image for post: ${featuredPost.slug}`);
}

// Map secondary posts with their images
const secondaryImages = secondaryPosts.map(post => ({
  post,
  image: imageMap[post.slug]
}));
---

<section class="max-w-3xl mx-auto px-6 py-12 md:py-16">
    <Test client:idle />
    <!-- Section Title -->
    <h2 class="text-3xl md:text-4xl font-bold uppercase mb-8 md:mb-12 text-center">
      The Augur Arc
    </h2>

    <!-- Blog Preview Container -->
    <div class="flex flex-col gap-8 md:gap-12">
      {/* Featured Post */}
      {featuredPost && (
        <article class="featured-post">
          {/* Featured Image */}
          {featuredImage && (
            <div class="w-full overflow-hidden border border-foreground/30 mb-4">
              <Image
                src={featuredImage}
                alt={featuredPost.data.title}
                width={1200}
                height={630}
                class="w-full h-auto object-cover"
              />
            </div>
          )}

          {/* Featured Post Content */}
          <h3 class="px-6 text-xl font-bold mb-2 uppercase">
            {featuredPost.data.title}
          </h3>
          <div class="px-6 font-custom text-sm leading-tight text-muted-foreground mb-4">
            <p>
              {featuredPost.data.description}
            </p>
          </div>
          <div class="flex items-center justify-between px-6">
              <div class="text-muted-foreground before:content-['\\25F4'] before:mr-1 before:text-foreground">
                {featuredPost.data.publishDate.toLocaleDateString('en-US', {
                  year: 'numeric',
                  month: '2-digit',
                  day: '2-digit'
                })}
              </div>
              <div class="text-right">
                <a
                  href={withBase(`/blog/${featuredPost.slug}`)}
                  class="outline-none cursor-pointer font-custom text-xs font-bold focus:text-loud-foreground hover:text-loud-foreground before:content-['[['] after:content-[']]'] group"
                >
                  <span class="group-focus:underline group-hover:underline underline-offset-4">+ READ MORE</span>
                </a>
              </div>
            </div>
        </article>
      )}

      {/* Secondary Posts Grid */}
      {secondaryPosts.length > 0 && (
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4 md:gap-6">
          {secondaryImages.map(({ post, image }) => (
            <article class="secondary-post flex flex-row items-start gap-4 border border-foreground/30 p-4 rounded" key={post.slug}>
              {/* Post Image */}
              {image && (
                <div class="w-1/3 aspect-square overflow-hidden rounded">
                  <Image
                    src={image}
                    alt={post.data.title}
                    width={400}
                    height={400}
                    class="w-full h-full object-cover"
                  />
                </div>
              )}

              {/* Post Content */}
              <div class="flex flex-col justify-between gap-2 flex-1">
                <div>
                  <h4 class="text-xl font-bold mb-2 uppercase">
                    {post.data.title}
                  </h4>
                  <p class="font-custom text-sm leading-tight text-muted-foreground line-clamp-2">
                    {post.data.description}
                  </p>
                </div>
                <div class="flex items-center justify-between">
                  <div class="text-muted-foreground before:content-['\\25F4'] before:mr-1 before:text-foreground">
                    {post.data.publishDate.toLocaleDateString('en-US', {
                      year: 'numeric',
                      month: '2-digit',
                      day: '2-digit'
                    })}
                  </div>
                  <div class="text-right">
                    <a
                      href={withBase(`/blog/${post.slug}`)}
                      class="outline-none cursor-pointer font-custom text-xs font-bold focus:text-loud-foreground hover:text-loud-foreground before:content-['[['] after:content-[']]'] group"
                    >
                      <span class="group-focus:underline group-hover:underline underline-offset-4">+ READ MORE</span>
                    </a>
                  </div>
                </div>
              </div>
            </article>
          ))}
        </div>
      )}

      {/* View All Link */}
      <div class="flex justify-center pt-4 md:pt-6">
        <a
          href={withBase('/blog')}
          class="text-base md:text-lg font-semibold text-loud-foreground hover:fx-glow transition-colors"
        >
          View all posts â†’
        </a>
      </div>
</section>
